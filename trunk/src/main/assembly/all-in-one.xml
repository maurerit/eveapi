<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>all-in-one</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file><source>target/eveapi-${version}.jar</source></file>
		<file><source>target/eveapi-${version}-tests.jar</source></file>
		<file><source>target/eveapi-${version}-sources.jar</source></file>
		<file><source>target/eveapi-${version}-test-sources.jar</source></file>
		<file><source>target/eveapi-${version}-javadoc.jar</source></file>
		<file><source>target/eveapi-${version}-test-javadoc.jar</source></file>
	</files>
</assembly>
